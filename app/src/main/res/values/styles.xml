<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonBookmark" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/white</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableStart">@drawable/ic_bookmark_border_gray_24dp</item>
        <item name="android:drawableLeft">@drawable/ic_bookmark_border_gray_24dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/merriweather</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/muli_black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
</resources>
